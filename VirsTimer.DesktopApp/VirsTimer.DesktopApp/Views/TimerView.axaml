<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:valueConverters="clr-namespace:VirsTimer.DesktopApp.ValueConverters;assembly=VirsTimer.DesktopApp"
		mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		x:Class="VirsTimer.DesktopApp.Views.TimerView"
		KeyDown="WindowKeyDown"
		KeyUp="WindowKeyUp">
	<Window.Resources>
		<valueConverters:FireTimerValueConverter x:Key="fireTimerValueConverter"/>
	</Window.Resources>
	<Panel>
		<ExperimentalAcrylicBorder IsHitTestVisible="False">
			<ExperimentalAcrylicBorder.Material>
				<ExperimentalAcrylicMaterial
					 BackgroundSource="Digger"
					 TintColor="Black"
					 TintOpacity="1"
					 MaterialOpacity="0.65" />
			</ExperimentalAcrylicBorder.Material>
		</ExperimentalAcrylicBorder>
		<Panel HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBlock x:Name="TimerTextBlock"
					   Text="{Binding CurrentTime}"
					   Foreground="{Binding Model, Converter={StaticResource fireTimerValueConverter}}"
					   HorizontalAlignment="Left"
					   VerticalAlignment="Center"
					   FontSize="144"
					   FontFamily="Verdana"
					   FontWeight="Regular"/>
		</Panel>
	</Panel>
</Window>
