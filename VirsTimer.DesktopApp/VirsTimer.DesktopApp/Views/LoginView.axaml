<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="VirsTimer.DesktopApp.Views.LoginView"
        Title="Logowanie">
    <Grid 
        RowDefinitions="2*,Auto,*,Auto,3*"
        ColumnDefinitions="*,2*,*">
    <ExperimentalAcrylicBorder IsHitTestVisible="False" Grid.ColumnSpan="3" Grid.RowSpan="5">
        <ExperimentalAcrylicBorder.Material>
            <ExperimentalAcrylicMaterial
                BackgroundSource="Digger"
                TintColor="Black"
                TintOpacity="1"
                MaterialOpacity="0.75" />
        </ExperimentalAcrylicBorder.Material>
    </ExperimentalAcrylicBorder>
    <TextBox
        Grid.Row="1"
        Grid.Column="1"
		MinHeight="40"
		VerticalContentAlignment="Center"
        Text="{Binding LoginName}"/>
    <TextBox
        Name="PasswordTextBox"
        Grid.Row="3"
		MinHeight="40"
        Grid.Column="1"
		VerticalContentAlignment="Center"
        Text="{Binding LoginPassowd}"/>
    <Button Grid.Row="5"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="20"
            Content="Akceptuj"
            Command="{Binding AcceptLoginCommand}"
            CommandParameter="{Binding $parent[Window]}"/>
    <TextBlock 
        Grid.Column="1"
        Padding="20"
        VerticalAlignment="Bottom"
        HorizontalAlignment="Center"
        Grid.Row="5" 
        Text="Nie udało się zalogować"
		IsVisible="{Binding IsResponseUnsccesfull}"
        Background="#ed924c"/>
		<ProgressBar
			IsIndeterminate="True"
			Grid.ColumnSpan="5"
			HorizontalAlignment="Right"
			Margin="20"
			VerticalAlignment="Top"
			IsVisible="{Binding IsBusy}"/>
    </Grid>
</Window>