<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        MinWidth="450"
        MinHeight="700"
        Width="450"
        Height="700"
        MaxWidth="450"
        MaxHeight="700"
        x:Class="VirsTimer.DesktopApp.Views.Events.EventChangeView"
        Title="EventChangeView"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True">
    <Grid RowDefinitions="30, *, 80">
        <ExperimentalAcrylicBorder Grid.RowSpan="3" IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="Black"
                    TintOpacity="1"
                    MaterialOpacity="0.45" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>
        <Panel Grid.Row="0"/>
        <ListBox 
            Name="EventsListBox"
            Background="Transparent"
            Grid.Row="1" 
            Items="{Binding Events}" 
            SelectedItem="{Binding SelectedEvent}"
            SelectionChanged="ListBoxSelectionChanged">
            <ListBox.Styles>
                <Style Selector="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </ListBox.Styles>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*, Auto, Auto">
                        <TextBlock
                            Margin="7"
                            Text="{Binding Name}"
                            IsVisible="{Binding !EditingEvent}"/>
                        <TextBox
                            GotFocus="ListItemTextBoxGotFocus"
                            Margin="7"
                            Text="{Binding Name, Mode=TwoWay}"
                            IsVisible="{Binding EditingEvent}"/>
 
                        <Button
                            Grid.Column="1"
                            HorizontalContentAlignment="Center"
                            Content="Zmień nazwę"
                            Command="{Binding RenameCommand}"
                            Click="ClickWithUnselect"
                            IsVisible="{Binding CanEdit}"/>
                        <Button
                            Margin="15 0 0 0"
                            Grid.Column="2"
                            HorizontalContentAlignment="Center"
                            Content="Usuń"
                            Command="{Binding $parent[Window].DataContext.DeleteEventCommand}"
                            CommandParameter="{Binding}"
                            Click="ClickWithUnselect"
                            IsVisible="{Binding CanEdit}"/>
                        <Button
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            HorizontalContentAlignment="Center"
                            Content="Akceptuj"
                            IsVisible="{Binding EditingEvent}"
                            Command="{Binding $parent[Window].DataContext.AcceptRenameEventCommand}"
                            CommandParameter="{Binding}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button
            Grid.Row="2"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Margin="20"
            Content="Dodaj"
            Command="{Binding AddEventCommand}"/>
        <Button
            Grid.Row="2"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Margin="20"
            Content="Akceptuj"
            Background="#0959db"
            Command="{Binding AcceptCommand}"
            CommandParameter="{Binding $parent[Window]}"/>
    </Grid>
</Window>
