<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Height="810"
		Width="600"
		MaxHeight="810"
		MaxWidth="600"
		MinHeight="810"
		MinWidth="600"
        x:Class="VirsTimer.DesktopApp.Views.Rooms.RoomCreationView"
        Title="RoomCreationView"
		WindowStartupLocation="CenterScreen"
		TransparencyLevelHint="AcrylicBlur"
		Background="Transparent"
		ExtendClientAreaToDecorationsHint="True"
		ExtendClientAreaChromeHints="NoChrome"
		ExtendClientAreaTitleBarHeightHint="-1">
	<Window.Styles>
		<Style Selector="Button">
			<Setter Property="Width" Value="300"/>
			<Setter Property="VerticalContentAlignment" Value="Top"/>
			<Setter Property="HorizontalContentAlignment" Value="Center"/>
			<Setter Property="Margin" Value="10"/>
			<Setter Property="Padding" Value="10"/>
		</Style>
	</Window.Styles>
	<Panel>
		<ExperimentalAcrylicBorder
            IsHitTestVisible="False">
			<ExperimentalAcrylicBorder.Material>
				<ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="Black"
                    TintOpacity="1"
                    MaterialOpacity="0.75" />
			</ExperimentalAcrylicBorder.Material>
		</ExperimentalAcrylicBorder>
		<StackPanel>
			<Panel Height="30"/>
			<Button
				x:Name="CreateRoomButton"
				Height="550"
				Width="400"
				VerticalAlignment="Stretch"
				HorizontalAlignment="Stretch">
				<DockPanel
					VerticalAlignment="Stretch">
					<TextBlock
						Margin="0 10 0 0"
						Text="Załóż pokój"
						FontSize="20"
						FontWeight="SemiBold"
						DockPanel.Dock="Top"
						HorizontalAlignment="Center"/>

					<DockPanel
						DockPanel.Dock="Bottom"
						VerticalAlignment="Stretch">
						<ListBox
							DockPanel.Dock="Top"
							Width="310"
							Height="400"
							ScrollViewer.HorizontalScrollBarVisibility="Disabled"
							ScrollViewer.VerticalScrollBarVisibility="Disabled"
							x:Name="EventsListBox"
							Items="{Binding AllEvents}"
							Margin="0 15 0 10">
							<ListBox.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding}"/>
								</DataTemplate>
							</ListBox.ItemTemplate>
						</ListBox>
						<TextBox
							DockPanel.Dock="Bottom"
							Margin="0 15 0 15"
							x:Name="ScramblesAmountTextBox"
							Watermark="Liczba scrambli (3-20)"
							Height="45"
							VerticalContentAlignment="Center"
							HorizontalAlignment="Center"
							VerticalAlignment="Center"
							Width="310"/>
					</DockPanel>
				</DockPanel>
			</Button>
			<Button
				x:Name="JoinRoomButton"
				Height="150"
				Width="400"
				VerticalAlignment="Center"
				HorizontalAlignment="Center">
				<StackPanel>
					<TextBlock
						Margin="0 10 0 10"
						Text="Dołącz do pokoju"
						FontSize="20"
						FontWeight="SemiBold"
						HorizontalAlignment="Center"/>
					<TextBox
						x:Name="AccessCodeTextBox"
						Watermark="Kod dostępu"
						Height="45"
						VerticalContentAlignment="Center"
						Margin="0 15 0 0"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Width="310"/>
				</StackPanel>
			</Button>
			<Button
				x:Name="CancelButton"
				Width="130"
				Margin="20 20 0 0"
				Content="Anuluj"/>
		</StackPanel>
		<ContentControl
			x:Name="SnackBarContentControl"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Center"
			ZIndex="-5"/>
	</Panel>
</Window>
